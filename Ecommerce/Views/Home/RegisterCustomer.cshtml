@model Client
@{
    ViewData["Title"] = "CadastroCliente";
}
<main role="main">
    <form asp-action="RegisterCustomer" asp-controller="Home" method="post">
        <section class="container" style="margin-top: 50px">
            <div class="row">
                <aside class="col-sm-6">
                    <h3 class="subtitle-doc">
                        # Cadastro de Cliente
                        <a href="#" data-html="code_register_1" class="showcode">[code]</a>
                    </h3>
                    <div id="code_register_1">
                        <div class="card">
                            <header class="card-header">
                                <a href="/Home/Login" class="float-right btn btn-outline-primary mt-1">Entrar</a>
                                <h4 class="card-title mt-2">Cadastrar-se</h4>
                            </header>
                            <article class="card-body">
                                @if (TempData["MSG_OK"] != null)
                                {
                                    <p class="alert alert-success">@TempData["MSG_OK"]</p>
                                }
                                
                                <div class="form-row">
                                    <div class="col form-group">
                                        <label asp-for="Name"></label>
                                        <input type="text" asp-for="Name" class="form-control" placeholder="">
                                        <span asp-validation-for="Name"></span>
                                    </div>
                                    <div class="col form-group">
                                        <label asp-for="Birthday"></label>
                                        <input type="text" asp-for="Birthday" class="form-control" placeholder="">
                                        <span asp-validation-for="Birthday"></span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="form-check form-check-inline">
                                        <input class="form-check-input" type="radio" asp-for="Sex" value="M">
                                        <span class="form-check-label"> Masculino </span>
                                    </label>
                                    <label class="form-check form-check-inline">
                                        <input class="form-check-input" type="radio" asp-for="Sex" value="F">
                                        <span class="form-check-label"> Feminino</span>
                                    </label>
                                    <span asp-validation-for="Sex"></span>
                                </div>
                                <div class="form-row">
                                    <div class="col form-group">
                                        <label asp-for="CPF"></label>
                                        <input type="text" asp-for="CPF" class="form-control" placeholder="">
                                        <span asp-validation-for="CPF"></span>
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="col form-group">
                                        <label asp-for="NumberPhone"></label>
                                        <input type="text" asp-for="NumberPhone" class="form-control" placeholder="">
                                        <span asp-validation-for="NumberPhone"></span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Email"></label>
                                    <input type="email" asp-for="Email" class="form-control" placeholder="">
                                    <span asp-validation-for="Email"></span>
                                </div> <!-- form-group end.// -->

                                <div class="form-group">
                                    <label asp-for="Password"></label>
                                    <input asp-for="Password" class="form-control" type="password">
                                    <span asp-validation-for="Password"></span>
                                </div> <!-- form-group end.// -->
                                <div class="form-group">
                                    <button type="submit" class="btn btn-primary btn-block"> Cadastrar </button>
                                </div> <!-- form-group// -->
                                <small class="text-muted">
                                    Ao clicar no botão 'Cadastrar', você confirma que
                                    <br> aceita os nossos Termos de uso e Política de privacidade.
                                </small>

                            </article> <!-- card-body end .// -->
                            <div class="border-top card-body text-center">Ja tem uma conta? <a href="/Home/Login">Entrar</a></div>
                        </div> <!-- card.// -->
                    </div> <!-- code-wrap.// -->
                </aside>
            </div>
        </section>
    </form>
</main>

