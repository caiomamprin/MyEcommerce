@model X.PagedList.IPagedList<Ecommerce.Models.Collaborator>
@{
    ViewData["Title"] = "Index";
}

<h1>Colaboradores</h1>

<a asp-action="RegisterCollaborator" class="btn btn-primary">Adicionar</a>
<br />
<br />
@if (TempData["MSG_OK"] != null)
{
    <p class="alert alert-success">@TempData["MSG_OK"]</p>
}


@if (Model != null)
{
    <div class="table-responsive">

        <table class="table">
            <thead class="thead-dark">
                <tr class="table-active">
                    <th scope="col">Código</th>
                    <th scope="col">Nome</th>
                    <th scope="col">Email</th>
                    <th scope="col">Tipo</th>
                    <th scope="col">Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Collaborator collaborator in Model)
                {
                    <tr>
                        <th scope="row">@collaborator.Id</th>
                        <td>@collaborator.Name</td>
                        <td>@collaborator.Email</td>
                        <td>@collaborator.Type</td>
                        <td>
                            <a asp-action="UpdateCollaborator" class="btn btn-secondary" asp-route-id="@collaborator.Id">Atualizar</a>
                            <a asp-action="DeleteCategory" class="btn btn-danger" asp-route-id="@collaborator.Id">Deletar</a>
                        </td>

                    </tr>
                }
            </tbody>

        </table>
    </div>
    @Html.PagedListPager((IPagedList)Model, pageIndex => Url.Action("Index", new { pageIndex }))
}
else
{
    <span>Nenhum Colaborador Cadastrado!</span>
}





